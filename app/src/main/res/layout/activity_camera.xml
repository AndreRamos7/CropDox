<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".CameraActivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/camera_cv_cropdox"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/camera_painel_fundo"
        android:layout_width="match_parent"
        android:layout_height="429dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sobrepoe_camera"
            android:layout_width="541dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/camera_controles"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/camera_imageViewPhoto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:contentDescription="@string/app_name" />

            <Button
                android:id="@+id/camera_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/camera_imageViewPhoto"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="false"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:background="@android:drawable/ic_menu_camera"
                android:clickable="true"
                android:focusable="true"
                android:selectAllOnFocus="true" />

            <ImageView
                android:id="@+id/camera_preview"
                android:layout_width="match_parent"
                android:layout_height="236dp"
                android:layout_below="@+id/camera_button"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:contentDescription="@string/app_name" />

            <Button
                android:id="@+id/next_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/camera_button"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:background="@android:drawable/ic_media_ff"
                android:clickable="true"
                android:focusable="true"
                android:selectAllOnFocus="true" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>