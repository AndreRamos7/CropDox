<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_qr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QrActivity"
    android:orientation="horizontal">

    <org.opencv.android.JavaCameraView
        android:id="@+id/cameraQR"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible" />

    <TextView
        android:id="@+id/text_view_instrucao"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccent"
        android:gravity="center|center_horizontal|center_vertical"
        android:importantForAutofill="no"
        android:text="@string/instrucao_qr"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView_miraQR"
        android:layout_width="match_parent"
        android:layout_height="541dp"
        android:contentDescription="@string/str_description_miraQR"
        app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />
</FrameLayout>